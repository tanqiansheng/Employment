<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.employment.skill.mapper.SkillMapper">
    
    <resultMap type="Skill" id="SkillResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="src"    column="src"    />
        <result property="releasePeople"    column="release_people"    />
        <result property="releaseTime"    column="release_time"    />
        <result property="visitTimes"    column="visit_times"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSkillVo">
        select id, title, content, src, release_people, release_time, visit_times, status, del_flag, create_by, create_time, update_by, update_time from employment_skill
    </sql>

    <select id="selectSkillList" parameterType="Skill" resultMap="SkillResult">
        <include refid="selectSkillVo"/>
        <where>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="src != null  and src != ''"> and src = #{src}</if>
            <if test="releasePeople != null  and releasePeople != ''"> and release_people like concat('%', #{releasePeople}, '%')</if>
            <if test="releaseTime != null "> and release_time = #{releaseTime}</if>
            <if test="visitTimes != null "> and visit_times = #{visitTimes}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="params.beginReleaseTime != null and params.beginReleaseTime != ''"><!-- 开始时间检索 -->
                AND date_format(release_time,'%y%m%d') &gt;= date_format(#{params.beginReleaseTime},'%y%m%d')
            </if>
            <if test="params.endReleaseTime != null and params.endReleaseTime != ''"><!-- 结束时间检索 -->
                AND date_format(release_time,'%y%m%d') &lt;= date_format(#{params.endReleaseTime},'%y%m%d')
            </if>
        </where>
        order by create_time DESC
    </select>
    <select id="selectNormalSkillList" parameterType="Skill" resultMap="SkillResult">
        <include refid="selectSkillVo"/>
        <where>
                and status =0
        </where>
        order by create_time DESC
    </select>

    <select id="selectSkillById" parameterType="Long" resultMap="SkillResult">
        <include refid="selectSkillVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSkill" parameterType="Skill" useGeneratedKeys="true" keyProperty="id">
        insert into employment_skill
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null  and title != ''">title,</if>
            <if test="content != null  and content != ''">content,</if>
            <if test="src != null  and src != ''">src,</if>
            <if test="releasePeople != null  and releasePeople != ''">release_people,</if>
            <if test="releaseTime != null ">release_time,</if>
            <if test="visitTimes != null ">visit_times,</if>
            <if test="status != null  and status != ''">status,</if>
            <if test="delFlag != null  and delFlag != ''">del_flag,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="updateBy != null  and updateBy != ''">update_by,</if>
            <if test="updateTime != null ">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null  and title != ''">#{title},</if>
            <if test="content != null  and content != ''">#{content},</if>
            <if test="src != null  and src != ''">#{src},</if>
            <if test="releasePeople != null  and releasePeople != ''">#{releasePeople},</if>
            <if test="releaseTime != null ">#{releaseTime},</if>
            <if test="visitTimes != null ">#{visitTimes},</if>
            <if test="status != null  and status != ''">#{status},</if>
            <if test="delFlag != null  and delFlag != ''">#{delFlag},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null ">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSkill" parameterType="Skill">
        update employment_skill
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null  and title != ''">title = #{title},</if>
            <if test="content != null  and content != ''">content = #{content},</if>
            <if test="src != null  and src != ''">src = #{src},</if>
            <if test="releasePeople != null  and releasePeople != ''">release_people = #{releasePeople},</if>
            <if test="releaseTime != null ">release_time = #{releaseTime},</if>
            <if test="visitTimes != null ">visit_times = #{visitTimes},</if>
            <if test="status != null  and status != ''">status = #{status},</if>
            <if test="delFlag != null  and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSkillById" parameterType="Long">
        delete from employment_skill where id = #{id}
    </delete>

    <delete id="deleteSkillByIds" parameterType="String">
        delete from employment_skill where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <update id="updateVisitTimes" parameterType="Long">
        UPDATE employment_skill
        SET visit_times = visit_times + 1
        where id = #{id}
    </update>
</mapper>